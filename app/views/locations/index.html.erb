<h2 align="center">Our Locations</h2>

<table id="results" cellpadding="5px">
	<tr>
		<th>Branch Name</th>
		<th>Street Address</th>
		<th>Phone</th>
		<% if !current_user.nil? and current_user.admin? %>
			<th>Options</th>
		<% end %>
	</tr>

	<% @locations.each do |location| %>
		<tr class="<%= cycle("even_row", "odd_row") %>">
			<td><%= link_to location.name,  location_path(location) %></td>
			<td><%= location.address %> <%= location.address_2 unless location.address_2.nil? %></td>
			<td><%= location.phone %></td>
			<td align="center"><%= link_to 'Edit', edit_location_path(location) %> | <%= link_to 'View',  location_path(location) %></td>
		</tr>
	<% end %>
</table>

<br />

<br />
<p align="center">
	<% if !current_user.nil? and current_user.admin? %>
		<%= link_to 'New Location', new_location_path %>
		|
	<% end %>
	<%= link_to 'Books', books_path %> | <%= link_to 'Home', root_path %>
</p>